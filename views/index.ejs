<div class="author">
    <h1 class="author__heading">Hi, I am Abbey</h1>
    <p class="author__body">Web Devloper and Accountant</p>
</div>

<img src="/images/hero-image.webp" alt="Person image" width="981" height="528" class="hero-image">

<section class="arcticles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%- post._id %>">
                    <span><%- post.title %></span>
                    <span class="article-list__date"><%- post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <a href="#" class="pagination">&lt; View Older Posts</a>
</section>